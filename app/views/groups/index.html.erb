<div class="col-md-12">

  <div class="group">
    <%= link_to("添加群组", new_group_path, class: "btn btn-primary pull-right") %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>标题</th>
        <th>描述</th>
        <th>创建者</th>
      </tr>
    </thead>

    <tbody>
      <%= render :partial => "group_item", :collection => @groups, :as => :group %>
    </tbody>
  </table>


</div>
