
<span class="pull-right">
  <% if current_user && current_user.is_member_of?(@group) %>
    <label class="label label-success">群组成员</label>
    <%= link_to("退出群组", quit_group_path(@group), method: :post, class: "btn btn-default") %>
    <% else %>
    <label class="label label-warning">不是群组成员</label>
    <%= link_to("加入群组", join_group_path(@group), method: :post, class: "btn btn-default") %>
  <% end %>
</span>


<%= link_to("发表文章", new_group_post_path(@group), class: "btn btn-primary pull-right") %>

<h1><%= @group.title %></h1>

<%= render_group_description(@group) %>
<hr>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>内容</th>
      <th>发表者</th>
      <th>创建时间</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>#</td>
        <td><%= post.content %></td>
        <td><%= post.user.email %></td>
        <td><%= post.created_at %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= will_paginate @posts %>
</div>
